{
  "name": "arrivals-osx",
  "version": "2.7.0",
  "description": "Watch a folder for audio and video arrivals and convert them to Apple-friendly formats.",
  "main": "lib/lib/arrivals.js",
  "types": "lib/lib/arrivals.d.ts",
  "repository": "https://github.com/mshick/arrivals-osx",
  "license": "MIT",
  "keywords": [
    "task queue",
    "audio conversion",
    "file conversion",
    "watch folder"
  ],
  "bin": {
    "arrivals": "bin/arrivals"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf lib dist *.tsbuildinfo",
    "compile": "tsc --build",
    "lint": "eslint . --ext .ts",
    "reset": "rm -rf node_modules dist package-lock.json",
    "test": "jest",
    "version": "standard-version",
    "watch": "tsc --watch"
  },
  "engines": {
    "node": ">=12.0"
  },
  "dependencies": {
    "@ronomon/opened": "^1.5.1",
    "better-queue": "^3.8.10",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.3",
    "del": "^6.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^7.1.6",
    "inquirer": "^7.3.3",
    "meow": "^8.0.0",
    "mkdirp": "^1.0.4",
    "plist": "^3.0.1",
    "sqlite3": "^5.0.0",
    "uuid": "^8.3.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/better-queue": "^3.8.2",
    "@types/fluent-ffmpeg": "^2.1.16",
    "@types/glob": "^7.1.3",
    "@types/inquirer": "7.3.1",
    "@types/jest": "^26.0.15",
    "@types/meow": "^5.0.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.7",
    "@types/plist": "^3.0.2",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
