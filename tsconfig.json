{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2018",
    "lib": ["ES2020"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./lib"
  },
  "exclude": ["./node_modules", "./**/*.test.ts", "./lib"]
}
